{
  "name": "miboda-ga",
  "version": "1.0.0",
  "description": "Invitación digital personalizada para boda con sistema de RSVP",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "python -m http.server 8000",
    "build": "echo 'Build completado'",
    "lint": "eslint src/js/*.js",
    "format": "prettier --write src/**/*.{js,css,html}",
    "generate-invitados": "cd src/python && python convertir_csv.py"
  },
  "keywords": [
    "boda",
    "invitación",
    "digital",
    "rsvp",
    "qr-codes",
    "wedding"
  ],
  "author": "Alejandra & Gerardo",
  "license": "UNLICENSED",
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.0"
  },
  "dependencies": {
    "qrcode": "^1.5.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/**/*.min.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
